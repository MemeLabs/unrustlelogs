<!doctype html>
<html lang="en">
    {{ template "header" }}
    <body>
        {{ template "navbar" . }}
        <div class="container my-3">
            {{ if eq .DeleteStatus "true" }}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    your logs will be deleted on the 1st each month
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {{ else if eq .DeleteStatus "false" }}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    your logs will no longer be deleted on the 1st each month
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {{ end }}
            <div class="card-deck text-center">
                <div class="card text-white bg-dark" >
                    <div class="card-header">
                        Twitch.tv {{ if .Twitch.LoggedIn }} - {{ .Twitch.Name }} {{ end }}
                    </div>
                    <div class="card-body">
                        {{ if .Twitch.IsDeleting }}
                            <p>Deleting logs on the 1st next month</p>
                        {{ end }}
                        <div class="text-center">
                            {{ if .Twitch.LoggedIn }}
                                <div class="btn-group" role="group">
                                    {{ if not .Twitch.IsDeleting }}
                                        <a href="/twitch/delete" role="button" class="btn btn-danger">Delete</a>
                                    {{ else }}
                                        <a href="/twitch/undelete" role="button" class="btn btn-success">Stop deleting</a>
                                    {{ end }}
                                    <a href="/twitch/logout" role="button" class="btn btn-dark">Logout</a>
                                </div>
                            {{ else }}
                                <a href="/twitch/login" role="button" class="btn twitch">Login</a>
                            {{ end }}
                        </div>
                    </div>
                </div>
                <div class="card text-white bg-dark">
                    <div class="card-header">
                        Destiny.gg {{ if .Destinygg.LoggedIn }} - {{ .Destinygg.Name }} {{ end }}
                    </div>
                    <div class="card-body">
                        {{ if .Destinygg.IsDeleting }}
                            <p>Deleting logs on the 1st next month</p>
                        {{ end }}
                        <div class="text-center">
                            {{ if .Destinygg.LoggedIn }}
                                <div class="btn-group" role="group">
                                    {{ if not .Destinygg.IsDeleting }}
                                        <a href="/dgg/delete" role="button" class="btn btn-danger">Delete</a>
                                    {{ else }}
                                        <a href="/dgg/undelete" role="button" class="btn btn-success">Stop deleting</a>
                                    {{ end }}
                                    <a href="/dgg/logout" role="button" class="btn btn-dark">Logout</a>
                                </div>
                            {{ else }}
                                <a href="/dgg/login" role="button" class="btn twitch">Login</a>
                            {{ end }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ template "scripts" }}
    </body>
</html>